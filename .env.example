# Database Configuration
POSTGRES_USER=photo_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=photo_gallery

# Backend Configuration
PORT=5000
NODE_ENV=production
DATABASE_URL="postgresql://photo_user:your_secure_password_here@localhost:5432/photo_gallery?schema=public"

# JWT Secret (generate a strong random string using: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_here

# Backblaze B2 Configuration
B2_KEY_ID=your_b2_key_id
B2_APPLICATION_KEY=your_b2_application_key
B2_BUCKET_NAME=your_bucket_name
B2_BUCKET_ID=your_bucket_id

# AWS S3 Compatible Configuration (for B2)
AWS_ACCESS_KEY_ID=your_b2_key_id
AWS_SECRET_ACCESS_KEY=your_b2_application_key
AWS_REGION=us-west-004
S3_BUCKET_NAME=your_bucket_name

# CDN Configuration (optional - for Cloudflare CDN)
CDN_URL=https://cdn.yarrowweddings.cloud

# CORS Configuration (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# First Admin User Setup
FIRST_ADMIN_EMAIL=admin@yourdomain.com
FIRST_ADMIN_PASSWORD=your_secure_admin_password
FIRST_ADMIN_NAME="Admin Name"

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api
